{
  "name": "cars-showroom-tests",
  "version": "1.0.0",
  "description": "Playwright test automation framework",
  "scripts": {
    "test": "playwright test",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:unit:coverage": "jest --coverage",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:chrome": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "type-check": "tsc --noEmit",
    "lint": "eslint tests --ext .ts",
    "lint:fix": "eslint tests --ext .ts --fix",
    "audit": "npm audit --audit-level=moderate",
    "audit:fix": "npm audit fix",
    "ci": "npm run type-check && npm run lint && npm run audit && npm run test:unit && npm test",
    "dev": "http-server ./ -p 3000"
  },
  "lint-staged": {
    "tests/**/*.ts": [
      "eslint --fix",
      "tsc --noEmit"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@playwright/test": "latest",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.0.0",
    "http-server": "^14.1.1",
    "husky": "^8.0.0",
    "jest": "^30.2.0",
    "lint-staged": "^15.0.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.0.0",
    "typescript-eslint": "^7.0.0"
  }
}
